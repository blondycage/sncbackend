{
  "name": "searchnorthcyprus-backend",
  "version": "1.0.0",
  "description": "Backend API for SearchNorthCyprus MVP",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "node test-server.js",
    "test:watch": "nodemon test-server.js",
    "setup": "npm install && echo 'Backend setup complete! Copy .env.example to .env and configure your environment variables.'",
    "lint": "echo 'Add ESLint configuration for linting'",
    "db:seed": "node scripts/seed.js",
    "db:clear": "node scripts/clearDB.js",
    "jobs:seed": "node scripts/seedJobs.js",
    "jobs:clear": "node -e \"require('./scripts/seedJobs.js').clearJobs()\"",
    "promotions:seed": "node scripts/seedPromotions.js",
    "home-appliances:seed": "node scripts/seedHomeAppliances.js"
  },
  "keywords": [
    "api",
    "express",
    "mongodb",
    "jwt",
    "stripe",
    "cloudinary"
  ],
  "author": "SearchNorthCyprus Team",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.41.0",
    "colors": "^1.4.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-fileupload": "^1.4.3",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "mongoose-paginate-v2": "^1.9.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.10.1",
    "qrcode": "^1.5.4",
    "streamifier": "^0.1.1",
    "stripe": "^14.9.0"
  },
  "devDependencies": {
    "axios": "^1.6.2",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
